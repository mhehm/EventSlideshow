<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.1" method="upgrade">
	<name>COM_EVENTSLIDESHOW</name>
	<author>Mohammad Hasani Eghtedar</author>
	<creationDate>2012-06-12</creationDate>
	<copyright>(C) 2012 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>m.h.eghtedar@gmail.com</authorEmail>
	<authorUrl>http://joomlacode.org/gf/project/eventsslideshow/</authorUrl>
	<version>3.2.1</version>
	<description>COM_EVENTSLIDESHOW_XML_DESCRIPTION</description>
	<install><!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall><!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="components/com_eventslideshow">
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.com_eventslideshow.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.com_eventslideshow.ini</language>
	</languages>
	<administration>
		<menu img="class:eventslideshow">COM_EVENTSLIDESHOW</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_eventslideshow" view="links" img="class:events"
				alt="Eventslideshow/Events">COM_EVENTSLIDESHOW_EVENTS</menu>
			<menu link="option=com_categories&amp;extension=com_eventslideshow"
				view="categories" img="class:eventslideshow-cat" alt="Eventslideshow/Categories">COM_EVENTSLIDESHOW_CATEGORIES</menu>
		</submenu>
		<files folder="administrator/components/com_eventslideshow">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>eventslideshow.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="administrator/language">
			<language tag="en-GB">en-GB/en-GB.com_eventslideshow.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_eventslideshow.sys.ini</language>
			<language tag="fa-IR">fa-IR/fa-IR.com_eventslideshow.ini</language>
			<language tag="fa-IR">fa-IR/fa-IR.com_eventslideshow.sys.ini</language>
		</languages>
	</administration>
	<updateservers>
		<server type="extension" priority="1" name="Events Slideshow Update">http://joomlacode.org/gf/project/eventsslideshow/scmsvn/?action=browse&amp;path=%2F*checkout*%2Ftrunk%2Feventslideshow-update.xml</server>
	</updateservers>
</extension>
